<html>
<head>
  <title>Add new product</title>
</head>
<body>
<div class="jumbotron text-center col-xs-8 col-lg-8">
  <h3>Add product</h3>
  <p></p>
  <%= form_for([Product.new]) do |form| %>
    <div class="field">
      <div class ="row">
        <div class="col-xs-4 col-lg-4" style="text-align: left"><%=form.label :Name %>:</div>
        <div class="col-xs-4 col-lg-4"><%= form.text_field :product_name %></div>
      </div>
    </div>
    <br>
    <div class="field">
      <div class ="row">
      <div class="col-xs-4 col-lg-4" style="text-align: left"> <%=form.label :Description %>:</div>
      <div class="col-xs-4 col-lg-4"> <%= form.text_field :description %></div>
    </div>
    </div>
    <br>
    <div class="field">
      <div class ="row">
      <div class="col-xs-4 col-lg-4" style="text-align: left"><%=form.label :Price %>:</div>
      <div class="col-xs-4 col-lg-4"><%= form.text_field :price %></div>
    </div>
    </div>
    <br>
    <div class="field">
      <div class ="row">
      <div class="col-xs-4 col-lg-4" style="text-align: left"><%=form.label :Category %>:</div>
      <div class="col-xs-4 col-lg-4"><%= form.collection_select(:category_id, Category.all, :id, :name ) %>
      </div>
      </div>
      <br>
    <div class="field">
      <div class ="row">

      <%= form.submit 'Save' %>
      </div>
    </div>
    </div>

<%end%>

</div>
</body>
</html>